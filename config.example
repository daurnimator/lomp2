-- This is the config file for LOMP.

-- Verbosity of lomp
 -- Ranges from 0 ( Fatal Errors only) to 5 (Debug)
 -- Default to 2
verbosity = 		4

-- Location of log file
 -- Default to ~/.lomp/lomp.log
logfile = 		"lomp.log"

-- Location of state file
 -- Contains last state of playlists, queues, etc
 -- Default to ~/.lomp/lomp.state
statefile = 		"lomp.state"

-- Location of tagcache file
 -- Contains tag library
 -- Default to ~/.lomp/lomp.tagcache
tagcachefile =		"lomp.tagcache"

-- Playback History
 -- How much history to remember
 -- Default to 200
history =		200

-- Library
 -- Location of your music
 -- Seperate entries with a comma
 -- eg: library = { "/media/mymusic" , "/home/myself/Music" }
library = {
	
}

-- Server Parameters
 -- Addresss and port to bind to on the local host. 
  -- Address can be an IP address or a host name. 
  -- If address is '*', the system binds to all local interfaces using the INADDR_ANY constant.
  -- Default to "*"
address =		"*"

 -- Port must be an integer number in the range [0..64K).  If port is 0, the system automatically chooses an ephemeral port. 
  -- Default to 5667
port = 			5667


-- Plugins
 -- Additional plugins to use
 -- Seperate with commas.
 -- eg, plugins = { "myawesomeplugin" , "coolplugin1234" , }
plugins = {
			"httpserver" ;
			"scrobbler" ;
			--"mpd" ;
			"mpris" ;
}

-- Tagging
 -- Save tag edits? (When a tag is changed, do we save the change to the file?)
  -- Default to false
savetagedits = 	true

 -- Tag matching patterns
  -- Let tags be guessed by file paths
   -- Tags are surrounded by //
   -- //_// is a junk operator
   -- ? makes the preceding character optional
tagpatterns = {
	Basic = 	"//Artist// - //Title//" ;
	Daurn = 	"//Album Artist//, //Album// ?{?//Release//}? ?(?D?i?s?c? ?//Disc//)?/[//Track//] //Artist// - //Title//" ;
	EAC = 		"//Artist// - //Album// (//Year//)//_/////Track// - //Title//" ;
}
  -- Default - must be the name of a pattern from above.
tagpatterndefault = 	"EAC"

-- Pedantics
 -- File extensions to ban
  -- You can use lua patterns here. (eg, mp.* matches mp, mp2, mp3, mpd, mpz, ....)
banextensions = {
}

 -- When adding a folder, how do we sort? (by path)
  -- Default to true
sortcaseinsensitive = 	true
